{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "firebase-admin": ["node_modules/firebase-admin"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}